{
  "name": "connors-repo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node --no-deprecation node_modules/.bin/next dev",
    "build": "node --no-deprecation node_modules/.bin/next build",
    "postbuild": "next-sitemap",
    "start": "node --no-deprecation node_modules/.bin/next start",
    "lint": "next lint",
    "test": "node --no-deprecation node_modules/.bin/jest",
    "test:watch": "node --no-deprecation node_modules/.bin/jest --watch",
    "test:coverage": "node --no-deprecation node_modules/.bin/jest --coverage",
    "test:ci": "node --no-deprecation node_modules/.bin/jest --ci --coverage --watchAll=false",
    "setup-husky": "./scripts/setup-husky.sh",
    "seed": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' prisma/seed.ts",
    "postinstall": "prisma generate",
    "vercel-build": "prisma generate && prisma migrate deploy && node --no-deprecation node_modules/.bin/next build && next-sitemap",
    "db:backup": "./scripts/backup_db.sh",
    "db:restore": "./scripts/restore_db.sh",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down",
    "db:reset": "prisma migrate reset --force",
    "db:migrate": "prisma migrate dev",
    "db:populate": "./scripts/populate_db.sh"
  },
  "dependencies": {
    "@clerk/nextjs": "^5.7.5",
    "@google-cloud/storage": "^7.14.0",
    "@google/genai": "^1.25.0",
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.1.5",
    "@prisma/client": "^5.21.1",
    "@vercel/analytics": "^1.5.0",
    "chart.js": "^4.4.4",
    "date-fns": "^4.1.0",
    "framer-motion": "^11.11.1",
    "next": "14.2.33",
    "next-pwa": "^5.6.0",
    "next-themes": "^0.3.0",
    "nodemailer": "^7.0.9",
    "posthog-js": "^1.225.0",
    "prisma": "^5.21.1",
    "react": "^18",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18",
    "react-hot-toast": "^2.4.1",
    "react-intersection-observer": "^9.13.1",
    "react-markdown": "^9.0.1",
    "replicate": "^1.1.0",
    "svix": "^1.37.0",
    "typewriter-effect": "^2.21.0",
    "uuid": "^11.0.2",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.17.6",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/web-push": "^3.6.4",
    "eslint": "^8",
    "eslint-config-next": "14.2.7",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "next-sitemap": "^4.2.3",
    "postcss": "^8",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.4.1",
    "tailwindcss-scrollbar": "^0.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "jest --bail --findRelatedTests"
    ],
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build"
    }
  }
}
